%% Headers and footers
\usepackage{fancyhdr}
\pagestyle{fancy}
\setlength{\headheight}{20pt}
\fancyfoot[r]{\textbf{\thepage}}
\fancyfoot[l]{}
\fancyfoot[c]{}
\fancyhead[l]{\textbf{\@coursecode}}
\fancyhead[r]{\textbf{\@chapname}}

\newcommand{\@chapname}

\renewcommand{\chaptermark}[1]{%
  \markboth{Lab \thechapter:\ #1}{}  
  \renewcommand{\@chapname}{#1}}

\renewcommand{\sectionmark}[1]{%
 \markboth{#1}{}}

% === Macros relating to front page.

\def\coursecode#1{\gdef\@coursecode{#1}}
\coursecode{Coursecode not specified} % Default

\def\bottomstuff#1{\gdef\@bottomstuff{#1}}
\bottomstuff{} % Default

\def\coursename#1{\gdef\@coursename{#1}}
\coursename{Coursename not specified} % Default

\def\title#1{\gdef\@title{#1}}
\title{Title not specified} % Default

\def\subtitle#1{\gdef\@subtitle{#1}}
\subtitle{\relax} % Default


\def\shorttitle#1{\gdef\@shorttitle{#1}}
\shorttitle{\@title} % Default


\def\@@author#1{\gdef\@author{{#1}}}
\def\author#1{\@@author{#1}}
\author{} % Default

\def\@@date#1{\gdef\@date{{#1}}}
\def\date#1{\@@date{#1}}
\date{} % Default

